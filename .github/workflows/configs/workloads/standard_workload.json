{
  "schema-version": "1.0",
  "benchmark-profile": {
    "name": "Standard Performance Test",
    "description": "Compare client library performance with GET/SET workload",
    "version": "1.0.0"
  },
  "phases": [
    {
      "id": "WARMUP",
      "description": "Warmup phase - preload keys",
      "connections": 50,
      "target_rps": -1,
      "completion": {
        "type": "duration",
        "duration_seconds": 60
      },
      "keyspace": {
        "seed": 0,
        "keys_count": 100000,
        "key_size_bytes": 16,
        "key_prefix": "bench:",
        "generation": "sequential_int"
      },
      "operations": [
        {
          "command": "SET",
          "weight": 1.0,
          "value_size_bytes": 256
        }
      ]
    },
    {
      "id": "STEADY",
      "description": "Measurement phase - mixed GET/SET workload",
      "connections": 500,
      "target_rps": 100000,
      "completion": {
        "type": "requests",
        "total_requests": 1000000
      },
      "keyspace": {
        "seed": 0,
        "keys_count": 100000,
        "key_size_bytes": 16,
        "key_prefix": "bench:",
        "generation": "uniform_random_int"
      },
      "operations": [
        {
          "command": "SET",
          "weight": 0.3,
          "value_size_bytes": 256
        },
        {
          "command": "GET",
          "weight": 0.7
        }
      ]
    }
  ]
}